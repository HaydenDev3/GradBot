# Production Environment Variables
# Copy this file to .env and fill in your values

# === Bot Configuration ===
BOT_TOKEN=your_discord_bot_token_here
CLIENT_ID=your_discord_client_id_here
GUILD_ID=your_discord_guild_id_here

# === Server Configuration ===
NODE_ENV=production
PORT=27145
HOST=0.0.0.0

# === Security ===
SESSION_SECRET=your_very_secure_session_secret_here_change_this_in_production
CORS_ORIGIN=*

# === Admin Credentials ===
ADMIN_PASSWORD=your_secure_admin_password
MOD_PASSWORD=your_secure_mod_password
TEACHER_PASSWORD=your_secure_teacher_password
ADMIN_USERS=admin_user_id_1,admin_user_id_2

# === Logging ===
LOG_LEVEL=info
# LOG_FILE=./logs/app.log

# === Database (Optional) ===
# DATABASE_URL=postgresql://user:password@localhost:5432/gradbot

# === Performance ===
CLUSTER_WORKERS=1
ENABLE_CLUSTERING=false
ENABLE_METRICS=false

# === Features ===
ENABLE_DASHBOARD=true

# === Rate Limiting ===
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# === Health Monitoring ===
HEALTH_CHECK_INTERVAL=60000
